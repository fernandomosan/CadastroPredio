@model List<TreinoCadastroPrédio.ViewlModels.FuncaoUsuarioViewModel>
@{
    ViewData["Title"] = "Atualizar funções do usuário" + @ViewBag.Nome;
}

<form asp-action="GerenciarUsuarios" method="post">
    <div asp-validation-summary="All"></div>

    <div class="collection with-header">
        <div class="collection-header grey darken-1">
            <h6 class="white-text">Atualizar funções do usuário @ViewBag.Nome</h6>
        </div>

        <div class="collection-item">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <label>
                    <input type="checkbox" asp-for="@Model[i].isSelecionado" />
                    <span asp-for="@Model[i].isSelecionado">@Model[i].Nome - @Model[i].descricao</span>
                    <input type="hidden" asp-for="@Model[i].FuncaoId" />
                    <input type="hidden" asp-for="@Model[i].Nome" />
                </label>
                <br />
            }
        </div>

    </div>

</form>

