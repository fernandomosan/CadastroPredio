@model GerenciadorCondominios.BLL.Models.Usuario
@{
    ViewData["Title"] = "MinhasInformacoes";
}

@*<partial name="_confirmações" />*@

 <div class="card horizontal">
     <div class="card-image">
         <i><img src="@Url.Content(Model.Foto)" height="250" /></i>
     </div>

     <div class="card-stacked">
         <div class="card-content">
             <div class="row">
                 <div class="col s6">
                     <span class="card-text purple-text darken-3">Nome - @Model.UserName</span>
                 </div>
                 <div class="col s6">
                     <span class="card-text purple-text darken-3">Email - @Model.Email</span>
                 </div>
             </div>

             <div class="row">
                 <div class="col s6">
                     <span class="card-text purple-text darken-3">CPF - @Model.CPF</span>
                 </div>
                 <div class="col s6">
                     <span class="card-text purple-text darken-3">Telefone - @Model.PhoneNumber</span>
                 </div>
             </div>
         </div>

         <div class="card-action">
             <a asp-controller="Usuarios" asp-action="Atualizar" asp-route-id="@Model.Id" class="btn-small purple darken-3">Atualizar</a>
             <a asp-controller="Usuarios" asp-action="Index" class="btn-small blue darken-3">Voltar</a>
         </div>
     </div>
 </div>

